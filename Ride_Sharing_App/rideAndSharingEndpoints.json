    {
      "name": "WebSocket Connection",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Sec-WebSocket-Protocol",
            "value": "v10.stomp, v11.stomp"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": "ws://localhost:8080/ws"
      },
      "description": "Initial WebSocket connection endpoint. Use this first before sending messages.",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// STOMP connection frame",
              "const connect = `CONNECT",
              "accept-version:1.1,1.0",
              "heart-beat:10000,10000",
              "",
              "\\u0000`;",
              "",
              "pm.environment.set('stompConnect', connect);"
            ]
          }
        }
      ]
    }
